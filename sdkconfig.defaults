# WiFi Configuration
CONFIG_ESP_WIFI_SOFTAP=y
CONFIG_ESP_WIFI_SSID="ESP32-UART-Server"
CONFIG_ESP_WIFI_PASSWORD=""
CONFIG_ESP_WIFI_CHANNEL=6
CONFIG_ESP_MAX_STA_CONN=4

# TCP/IP Adapter
CONFIG_LWIP_DHCPS=y
CONFIG_LWIP_DHCPS_LEASE_UNIT=60
CONFIG_LWIP_DHCPS_MAX_STATION_NUM=4

# FreeRTOS
CONFIG_FREERTOS_HZ=1000

# Logger
CONFIG_LOG_DEFAULT_LEVEL_INFO=y

# HTTP Server
CONFIG_HTTPD_MAX_REQ_HDR_LEN=512
CONFIG_HTTPD_MAX_URI_LEN=256
CONFIG_HTTPD_WS_SUPPORT=y

# WebSocket
CONFIG_HTTPD_WS_SUPPORT=y

# UART Configuration
CONFIG_UART_ISR_IN_IRAM=y
CONFIG_UART_RXBUF_SIZE=1024
